                            android:layout_height="wrap_content"
                            android:id="@+id/CILateNightTxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />
                    </TableRow>






                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Latitudes"
                        android:id="@+id/textView47"
                        android:textAlignment="center"
                        android:layout_column="1"
                        android:textColor="#000000"
                        android:background="@drawable/cell_shape"
                        android:textStyle="bold" />

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/LABreakfasttxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/LALunchTxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/LADinnerTxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/LALateNightTxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />
                    </TableRow>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="New Traditions"
                        android:id="@+id/textView17"
                        android:textAlignment="center"
                        android:layout_column="1"
                        android:textColor="#000000"
                        android:background="@drawable/cell_shape"
                        android:textStyle="bold" />

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/NTBreakfasttxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/NTLunchTxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/NTDinnerTxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/NTLateNightTxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />
                    </TableRow>






                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="The Berg"
                        android:id="@+id/textView22"
                        android:textAlignment="center"
                        android:layout_column="1"
                        android:textColor="#000000"
                        android:background="@drawable/cell_shape"
                        android:textStyle="bold" />

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/TBBreakfasttxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/TBLunchTxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/TBDinnerTxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/TBLateNightTxt"
                            android:textIsSelectable="false"
                            android:textSize="10dp"
                            android:textColor="#000000" />
                    </TableRow>







                </TableLayout>

                <FrameLayout
                    android:id="@+id/flContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header"/>

</android.support.v4.widget.DrawerLayout>
